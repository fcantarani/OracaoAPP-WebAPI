name: oracao-app
services:
  database:
    container_name: database
    environment:
      PGDATA: /var/lib/postgresql/data
      POSTGRES_DB: pray_db
      POSTGRES_HOST: localhost
      POSTGRES_PASSWORD: admrss
      POSTGRES_PORT: "5432"
    image: postgres:15.5
    networks:
      default: null
    ports:
      - mode: ingress
        target: 5432
        published: "5432"
        protocol: tcp
    volumes:
      - type: volume
        source: pray_db
        target: /var/lib/postgresql/data
        volume: {}
      - type: bind
        source: D:\Developments\Applications\OracaoApp\OracaoApp-WebAPI\assets\initdb
        target: /docker-entrypoint-initdb.d
        bind:
          create_host_path: true
  keycloak:
    command:
      - start-dev
      - --health-enabled=true
      - --import-realm
      - --log-level=INFO
    container_name: keycloak
    depends_on:
      database:
        condition: service_started
        required: true
    environment:
      KC_DB: postgres
      KC_DB_PASSWORD: admrss
      KC_DB_URL: jdbc:postgresql://database/keycloak
      KC_DB_USERNAME: postgres
      KC_PROXY: edge
      KEYCLOAK_ADMIN: admin
      KEYCLOAK_ADMIN_PASSWORD: admin
    image: quay.io/keycloak/keycloak:25.0.2
    networks:
      default: null
    ports:
      - mode: ingress
        target: 8080
        published: "8080"
        protocol: tcp
    volumes:
      - type: bind
        source: D:\Developments\Applications\OracaoApp\OracaoApp-WebAPI\assets\keycloak
        target: /opt/keycloak/data/import
        bind:
          create_host_path: true
  oracaoapp-api:
    build:
      context: D:\Developments\Applications\OracaoApp\OracaoApp-WebAPI
      dockerfile: OracaoApp-API/Dockerfile
      args:
        BUILD_CONFIGURATION: Debug
        LAUNCHING_FROM_VS: "true"
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: OracaoApp-API
      target: base
    container_name: OracaoApp-API_1
    entrypoint:
      - dotnet
      - --roll-forward
      - Major
      - /VSTools/DistrolessHelper/DistrolessHelper.dll
      - --wait
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTP_PORTS: "8080"
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: "1"
      NUGET_FALLBACK_PACKAGES: ""
    image: oracaoappapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /.nuget/packages  "/app/bin/Debug/net8.0/OracaoApp-API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: dotnet --roll-forward Major /VSTools/DistrolessHelper/DistrolessHelper.dll --stop dotnet
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    networks:
      default: null
    ports:
      - mode: ingress
        target: 8080
        protocol: tcp
    tty: true
    volumes:
      - type: bind
        source: D:\Developments\Applications\OracaoApp\OracaoApp-WebAPI\OracaoApp-API
        target: /app
        bind:
          create_host_path: true
      - type: bind
        source: D:\Developments\Applications\OracaoApp\OracaoApp-WebAPI
        target: /src
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\Fabio\vsdbg\vs2017u5
        target: /remote_debugger
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\Fabio\.nuget\packages
        target: /.nuget/packages
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\Fabio\AppData\Roaming\ASP.NET\Https
        target: /root/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\Fabio\AppData\Roaming\ASP.NET\Https
        target: /home/app/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\Fabio\AppData\Roaming\Microsoft\UserSecrets
        target: /root/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\Fabio\AppData\Roaming\Microsoft\UserSecrets
        target: /home/app/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Program Files\Microsoft Visual Studio\2022\Community\MSBuild\Sdks\Microsoft.Docker.Sdk\tools\linux-x64\net8.0
        target: /VSTools
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Program Files\Microsoft Visual Studio\2022\Community\Common7\IDE\CommonExtensions\Microsoft\HotReload
        target: /HotReloadAgent
        read_only: true
        bind:
          create_host_path: true
networks:
  default:
    name: oracao-app_default
volumes:
  pray_db:
    name: oracao-app_pray_db
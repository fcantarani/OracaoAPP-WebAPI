name: oracao-app
services:
  database:
    container_name: database
    environment:
      PGDATA: /var/lib/postgresql/data
      POSTGRES_DB: pray_db
      POSTGRES_HOST: localhost
      POSTGRES_PASSWORD: admrss
      POSTGRES_PORT: "5432"
    image: postgres:15.5
    networks:
      default: null
    ports:
      - mode: ingress
        target: 5432
        published: "5432"
        protocol: tcp
    volumes:
      - type: volume
        source: pray_db
        target: /var/lib/postgresql/data
        volume: {}
      - type: bind
        source: D:\Developments\Applications\OracaoApp\OracaoApp.WebAPI\assets\initdb
        target: /docker-entrypoint-initdb.d
        bind:
          create_host_path: true
  keycloak:
    command:
      - start-dev
      - --health-enabled=true
      - --import-realm
      - --log-level=INFO
    container_name: keycloak
    depends_on:
      database:
        condition: service_started
        required: true
    environment:
      KC_DB: postgres
      KC_DB_PASSWORD: admrss
      KC_DB_URL: jdbc:postgresql://database/keycloak
      KC_DB_USERNAME: postgres
      KC_PROXY: edge
      KEYCLOAK_ADMIN: admin
      KEYCLOAK_ADMIN_PASSWORD: admin
    image: quay.io/keycloak/keycloak:25.0.2
    networks:
      default: null
    ports:
      - mode: ingress
        target: 8080
        published: "8080"
        protocol: tcp
    volumes:
      - type: bind
        source: D:\Developments\Applications\OracaoApp\OracaoApp.WebAPI\assets\keycloak
        target: /opt/keycloak/data/import
        bind:
          create_host_path: true
  oracaoapp-api:
    build:
      context: D:\Developments\Applications\OracaoApp\OracaoApp.WebAPI
      dockerfile: OracaoApp-API/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTP_PORTS: "8080"
    image: oracaoappapi
    networks:
      default: null
    ports:
      - mode: ingress
        target: 8080
        published: "5001"
        protocol: tcp
networks:
  default:
    name: oracao-app_default
volumes:
  pray_db:
    name: oracao-app_pray_db